{
	"name": "AuthManagerOAuth",
	"author": [
		"Moritz Hedtke"
	],
	"url": "https://www.mediawiki.org/wiki/Extension:AuthManagerOAuth",
	"descriptionmsg": "authmanageroauth-desc",
	"license-name": "GPL-2.0-or-later",
	"type": "other",
	"requires": {
		"MediaWiki": ">= 1.35.0"
	},
	"AutoloadNamespaces": {
		"MediaWiki\\Extension\\AuthManagerOAuth\\": "includes/"
	},
	"load_composer_autoloader": true,
	"config": {
		"AuthManagerOAuthEnableFoo": {
			"description": "Enable the Foo feature.",
			"value": true
		},
		"AuthManagerOAuthVandalizeEachPage": {
			"description": "Write 'AuthManagerOAuth was here' on each page",
			"value": false
		},
		"AuthManagerOAuthConfig": {
			"description": "See GenericProvider constructor at https://oauth2-client.thephpleague.com/usage/ for the format.",
			"value": ""
		}
	},
	"ConfigRegistry": {
		"authmanageroauth": "GlobalVarConfig::newInstance"
	},
	"HookHandlers": {
		"AuthManagerOAuthHooks": {
			"class": "MediaWiki\\Extension\\AuthManagerOAuth\\Hooks"
		}
	},
	"Hooks": {
		"BeforePageDisplay": "AuthManagerOAuthHooks",
		"GetPreferences": "AuthManagerOAuthHooks",
		"LoadExtensionSchemaUpdates": "AuthManagerOAuthHooks"
	},
	"MessagesDirs": {
		"AuthManagerOAuth": [
			"i18n"
		]
	},
	"ResourceFileModulePaths": {
		"localBasePath": "resources",
		"remoteExtPath": "AuthManagerOAuth/resources"
	},
	"ResourceModules": {
		"ext.authManagerOAuth": {
			"dependencies": [],
			"messages": [],
			"styles": [],
			"scripts": []
		}
	},
	"AuthManagerAutoConfig": {
        "primaryauth": {
            "MediaWiki\\Extension\\AuthManagerOAuth\\AuthManagerOAuthPrimaryAuthenticationProvider": {
                "class": "MediaWiki\\Extension\\AuthManagerOAuth\\AuthManagerOAuthPrimaryAuthenticationProvider",
				"sort": -10000
            }
        }
    },
	"HiddenPrefs": ["authmanageroauth-pref-userid"],
	"manifest_version": 2
}
